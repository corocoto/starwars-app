{
  "name": "starwars-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://corocoto.github.io/starwars-app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corocoto/starwars-app.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "tsc:check": "tsc -p tsconfig.json --noEmit",
    "eslint:format": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "eslint:check": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prettier:format": "prettier --write ./src/**/*.{css,ts,tsx}",
    "prettier:check": "prettier --check ./src/**/*.{css,ts,tsx}",
    "editorconfig:check": "editorconfig-checker",
    "lint": "npm run editorconfig:check && npm run eslint:check && npm run prettier:check && npm run tsc:check",
    "prepare": "npx simple-git-hooks"
  },
  "lint-staged": {
    "*": [
      "editorconfig-checker"
    ],
    "*.ts": [
      "eslint --fix --ext .ts .",
      "tsc -p tsconfig.json --noEmit",
      "prettier --write ./src/**/*.ts"
    ],
    "*.tsx": [
      "eslint --fix --ext .tsx .",
      "tsc -p tsconfig.json --noEmit",
      "prettier --write ./src/**/*.tsx"
    ],
    "*.css": [
      "prettier --write ./src/**/*.css"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "antd": "^5.12.2",
    "axios": "^1.6.2",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "lottie-react": "^2.4.0",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "react-use": "^17.4.2",
    "redux": "^5.0.0",
    "styled-components": "^6.1.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-lottie": "^1.2.10",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "editorconfig-checker": "^5.1.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.1.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
